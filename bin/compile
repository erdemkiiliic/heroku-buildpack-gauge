#!/usr/bin/env bash

echo "-----> Installing Gauge 1.4.3"

# change to the the BUILD_DIR ($1)
cd $1

# download the binary (-O) silently (-s)
curl https://github.com/getgauge/gauge/archive/refs/tags/v1.4.3.tar.gz -s -O -ssl3

# make a directory to untar (like unzip) the binary
mkdir -p vendor/gauge

# untar the binary to the directory we want
tar -C vendor/gauge -xvf gauge-1.4.3.tar.gz
